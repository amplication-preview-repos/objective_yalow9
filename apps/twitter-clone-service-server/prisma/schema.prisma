datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  author         String?
  authorTweet    String?
  content        String?
  contentTweet   String?
  createdAt      DateTime  @default(now())
  id             String    @id @default(cuid())
  likes          Like[]
  retweets       Retweet[]
  timestamp      DateTime?
  timestampTweet DateTime?
  updatedAt      DateTime  @updatedAt
}

model Follow {
  createdAt DateTime  @default(now())
  follower  String?
  following String?
  fuid      Int?
  id        String    @id @default(cuid())
  timestamp DateTime?
  uid       Int?
  updatedAt DateTime  @updatedAt
}

model Like {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  tid       Int?
  timestamp DateTime?
  tweet     Tweet?    @relation(fields: [tweetId], references: [id])
  tweetId   String?
  uid       Int?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Retweet {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  tid       Int?
  timestamp DateTime?
  tweet     Tweet?    @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt     DateTime  @default(now())
  email         String?   @unique
  emailUser     String?
  firstName     String?
  firstNameUser String?
  id            String    @id @default(cuid())
  lastName      String?
  lastNameUser  String?
  likes         Like[]
  password      String
  passwordUser  String?
  retweets      Retweet[]
  roles         Json
  updatedAt     DateTime  @updatedAt
  username      String    @unique
  usernameUser  String?
}
